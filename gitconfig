[alias]
    amend = commit --amend
    staged = diff --cached
    changes = diff --name-status -r
    diffstat = diff --stat -r
    changelog = !git log --stat $(git describe --abbrev=0)..HEAD
    ls-ignored = ls-files --exclude-standard --ignored --others

[branch]
    autosetupmerge = true
    autosetuprebase = always

[color]
    ui = auto

[diff]
    renames = copy

[help]
    autocorrect = 1

[merge]
    tool = vimdiff

[rebase]
    stat = true
    autosquash = true

[url "git@github.com:"]
    insteadof = github:

[url "git://anongit.freedesktop.org/"]
    insteadof = freedesktop:

