   ui = auto

[alias]
   amend = commit --amend
   staged = diff --cached
   changes = diff --name-status -r
   diffstat = diff --stat -r

[merge]
   tool = vimdiff

[diff]
   renames = copy

[help]
   autocorrect = 1

