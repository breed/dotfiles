
gtk-icon-sizes = "panel-menu=16,16:gtk-menu=16,16:gtk-small-toolbar=16,16:gtk-large-toolbar=16,16:gtk-button=16,16"
gtk-toolbar-style = GTK_TOOLBAR_ICONS
gtk-auto-mnemonics = 1

style "theme-notebook"
{
    ythickness = 1
}

style "theme-menubar"
{
    GtkMenuBar::shadow-type = GTK_SHADOW_NONE
}

style "theme-toolbar"
{
    GtkToolbar::shadow-type = GTK_SHADOW_NONE
}

style "theme-tooltips"
{
    GtkWidget::new-tooltip-style = 1
}

style "theme-engine"
{
    engine "clearlooks"
    {
        animation = TRUE
    }
}

class "GtkWidget" style "theme-engine"
class "GtkMenuBar" style "theme-menubar"
class "GtkToolbar" style "theme-toolbar"
class "GtkNotebook" style "theme-notebook"
widget "gtk-tooltip*" style "theme-tooltips"

