function zle-keymap-select {
  case ${KEYMAP} in
  vicmd)
    POSTDISPLAY=$'\n -- command mode --'
    region_highlight=( "${#BUFFER} 32 fg=red,bold" )
  ;;
  *)
    POSTDISPLAY=
    region_highlight=( )
  ;;
  esac
}

zle -N zle-keymap-select

